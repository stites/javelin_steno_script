func activateGlobal() {
  if (([[00 01 01 01 01 00 01 00]][resolveLayerIndex()])) {
    pressAll();
  }
  setEnableButtonStates(([[01 00 00 00 00 00 00 00]][resolveLayerIndex()]));
  updateDisplay();
  rgbUpdate();
  rgbUpdateUnderglow();

}

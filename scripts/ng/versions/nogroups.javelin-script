    if ( isScanCodePressed(0x6a /* "F15" */) ) { releaseScanCodeButton(0x6a /* "F15" */); }
    if ( isScanCodePressed(223 /* "" */) ) { releaseScanCodeButton(223 /* "" */); }
  }
}

